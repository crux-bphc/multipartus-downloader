{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://logto.local.crux-bphc.com"
        },
        {
          "url": "https://lex.crux-bphc.com/api/impartus/*"
        },
        {
          "url": "https://staging.lex.crux-bphc.com/api/impartus/*"
        },
        {        
          "url": "http://localhost:*/impartus/*"
        }
      ]
    },
    "core:default",
    "opener:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "-version"
          ],
          "name": "binaries/ffmpeg",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "oauth:allow-start",
    "oauth:allow-cancel",
    "dialog:allow-open"
  ]
}